<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/layout_title_margin_top"
    android:background="@null"
    android:padding="@dimen/layout_title_padding"
    android:visibility="visible" >

    <ImageView
        android:id="@+id/imageView_compas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/rays_content_desc"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_compas"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView_globe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/rays_content_desc"
        android:scaleType="fitCenter"
        android:src="@drawable/globe"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/rays_content_desc"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_banner"
        android:visibility="visible" />

</RelativeLayout>