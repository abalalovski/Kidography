<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_answers"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="@dimen/answers_buttons_bottom_margin"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible" >

    <LinearLayout
        android:id="@+id/layout_answers_firstrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp" >

        <Button
            android:id="@+id/button_answer_one"
            style="@style/answerButtonStyle" />

        <Button
            android:id="@+id/button_answer_two"
            style="@style/answerButtonStyle" />
        
        <Button
            android:id="@+id/button_answer_three"
            style="@style/answerButtonStyle" />
    </LinearLayout>

</LinearLayout>