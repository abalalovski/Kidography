<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView_grass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grass_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/grass"
        android:contentDescription="@string/grass_content_desc"
        android:visibility="visible" />

    <include layout="@layout/game_info_layout" />

    <include layout="@layout/question_layout" />

    <include layout="@layout/answers_buttons_layout" />

    <include layout="@layout/announce_start_layout" />

    <LinearLayout
        android:id="@+id/view_banner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" />

</RelativeLayout>