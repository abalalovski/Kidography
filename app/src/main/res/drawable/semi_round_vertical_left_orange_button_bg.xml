<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient 
                android:startColor="#CC7900"
                android:centerColor="#EE9B21"
                android:endColor="#EDC790"
                android:angle="90" />
             <stroke
                android:width="1dp"
                android:color="#CC7900" />
           <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="60dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="60dp"
                />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient 
                android:startColor="#D78000"
                android:centerColor="#FFA624"
                android:endColor="#FFD69B"
                android:angle="90" />
            <stroke 
                android:width="1dp"
                android:color="#D78000" />
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="60dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="60dp"
                />
            <padding
                android:left="20dp"
                android:top="5dp"
                android:right="20dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>