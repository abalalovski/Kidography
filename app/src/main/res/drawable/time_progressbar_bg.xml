<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <corners android:radius="5dp" />

            <solid android:color="#333333" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <stroke
                android:width="1dp"
                android:color="@android:color/black" />
        </shape>
    </item>
    <item>
        <clip>
            <shape>
                <stroke
                    android:width="1dp"
                    android:color="@android:color/black" />

                <padding android:top="0dp" />

                <corners android:radius="5dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#21C7DF"
                    android:endColor="#2188DF"
                    android:startColor="#21C7DF" />
            </shape>
        </clip>
    </item>

</layer-list>