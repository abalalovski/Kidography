<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <corners android:radius="10dp" />

            <gradient
                android:angle="90"
                android:centerColor="#E8E2E4"
                android:endColor="#FBF7F8"
                android:startColor="#FBF7F8" />

            <stroke
                android:width="1dp"
                android:color="#50127ABF" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    <item>
        <clip>
            <shape>
                <corners android:radius="10dp" />

                <gradient
                    android:angle="90"
                    android:endColor="#1796DB"
                    android:startColor="#236EA5" />
            </shape>
        </clip>
    </item>

</layer-list>